<head>
        <meta charset="utf-8">
        <title>Admin</title>
<!-- <link href="https://fonts.googleapis.com/css?family=Akronim|Londrina+Outline|Rye|Shojumaru" rel="stylesheet"> -->
        <link href="https://fonts.googleapis.com/css?family=Lobster+Two" rel="stylesheet">
        <link rel="stylesheet" href="/css/admin.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
     <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>

<body>
        <h1 class="availableWaiters" align="center">AVAILABLE WAITERS</h1><br><br><br><br><br>

         <div class="key">
                 <p class="info"><b>KEY:</b></p>
                        <p class="green">enough waiters</p>
                        <p class="red">shortage of waiters</p>
                        <p class="orange">more waiters</p>

        </div>
        <br><br><br><br>
        <table class="table table-hover" align="center">
                <div class="col-sm-1">
                <thead>
                        <tr>
                                <th><b>Monday</b></th>
                                <th><b>Tuesday</b></th>
                                <th>Wednesday</th>
                                <th>Thursday</th>
                                <th>Friday</th>
                                <th>Saturday</th>
                                <th>Sunday</th>
                        </tr>
                </thead>
        </div>
                <tbody>
                        <ul>
                                <div class="col-sm-1">
                                <td class="{{mondayColor}}">
                                        {{#each mon}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{tuesdayColor}}">
                                        {{#each tue}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{wednesdayColor}}">
                                        {{#each wed}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{thursdayColor}}">
                                        {{#each thur}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{fridayColor}}">
                                        {{#each fri}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{saturdayColor}}">
                                        {{#each sat}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{sundayColor}}">
                                        {{#each sun}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        </ul>
                </tbody>
        </table>
        <br><br>
        <div class="clearDData">
                {{messages.error}}
        </div>
        <form class="" action="/clear" method="post" align="center">
                <input type="submit" name="" value="Clear Histoy" class="btn btn-info">
        </form>
</body>
