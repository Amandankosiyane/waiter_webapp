<head>
        <meta charset="utf-8">
        <title>Admin</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/admin.css">

</head>

<body>
        <h6 > <b class="availableWaiters" align="center">Available waiters</b><br><br><br><br><br>
         <div class="key">
                 <p class="info"><b>KEY:</b></p>
                        <p class="green">enough waiters</p>
                        <p class="red">shortage of waiters</p>
                        <p class="orange">more waiters</p>

        </div>
        </h6>
        <br><br><br><br>
        <table align="center">
                <div class="col-sm-1">
                <thead>
                        <tr>
                                <th>Monday</th>
                                <th>Tuesday</th>
                                <th>Wednesday</th>
                                <th>Thursday</th>
                                <th>Friday</th>
                                <th>Saturday</th>
                                <th>Sunday</th>
                        </tr>
                </thead>
        </div>
                <tbody>
                        <ul>
                                <div class="col-sm-1">
                                <td class="{{mondayColor}}">
                                        {{#each mon}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{tuesdayColor}}">
                                        {{#each tue}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{wednesdayColor}}">
                                        {{#each wed}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{thursdayColor}}">
                                        {{#each thur}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{fridayColor}}">
                                        {{#each fri}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{saturdayColor}}">
                                        {{#each sat}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        <div class="col-sm-1">
                                <td class="{{sundayColor}}">
                                        {{#each sun}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                </td>
                        </div>
                        </ul>
                </tbody>
        </table>
        <br><br><br><br>
        <form class="" action="/clear" method="post" align="center">

                <input type="submit" name="" value="Clear Histoy" class="clearData">
        </form>
</body>
